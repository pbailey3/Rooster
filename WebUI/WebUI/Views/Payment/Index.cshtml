@model WebUI.DTOs.PaymentDetailsDTO
<nav class="navbar navbar-default navbar-fixed-top">
    <div class="text-center">
        <div class="nav-tools pull-right">
        </div>
        <div class="nav-tools pull-left">
        </div>
        <div class="nav-tools">
            <h3>Payments</h3>
        </div>
    </div>
</nav>
<div id="page-content" class="container-fluid theme-showcase">
    <div class="row-fluid">
        <div class="col-md-12">
                    <section id="mainContent">

                        <h3>Payment details</h3>
                        <br/>
                                                @if (Model == null)
                                                {
                                                    <p>
                                                        <text>There are currently no credit card details stored for this business location</text>
                                                    </p>
                                <p>
                                @Ajax.ActionLink("Add card details", "AddCardDetails", new { businesslocationid = ViewBag.BusinessLocationId }, new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "body", LoadingElementId = "divLoading" }, new { @class = "btn btn-sm btn-primary" })
                            </p>
                        }
                        else
                        {
                            <p>
                                Credit card payment details registered
                            </p>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.DisplayNameFor(model => model.EmployeeFirstName)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.EmployeeFirstName)
                                </dd>

                                <dt>
                                    @Html.DisplayNameFor(model => model.EmployeeLastName)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.EmployeeLastName)
                                </dd>
                                <dt>
                                    @Html.DisplayNameFor(model => model.CreatedDate)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.CreatedDate)
                                </dd>
                            </dl>

                            <p>
                                @Ajax.ActionLink("Add new card details", "AddCardDetails", new { businesslocationid = ViewBag.BusinessLocationId },new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "body", LoadingElementId = "divLoading" }, new { @class = "btn btn-sm btn-default" })
                            </p>
                        }
                    </section>
        </div>
    </div>
</div>


