    </head>
<body role="document" class="page-home">
    <div id="wrapper">
        @Html.Hidden("hdnCountryConfig", System.Web.Configuration.WebConfigurationManager.AppSettings["CountryConfig"])
        @{ Html.RenderAction("NavMenu", "Partial"); }
        <div id="page-content-wrapper">
            <div id="body">
                @RenderBody()
            </div>
            <footer id="footer">
                <cite>&copy;2017 - Batdog Software Pty Ltd</cite> | @Ajax.ActionLink("About us", "About","Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "body", LoadingElementId = "divLoading" }) | @Ajax.ActionLink("FAQ", "FAQ", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "body", LoadingElementId = "divLoading" }) | @Ajax.ActionLink("Contact us", "Contact", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "body", LoadingElementId = "divLoading" }) | @Ajax.ActionLink("Terms and conditions", "TermsAndConditions", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "body", LoadingElementId = "divLoading" }) | @Ajax.ActionLink("Privacy policy", "PrivacyPolicy", "Home", new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "GET", UpdateTargetId = "body", LoadingElementId = "divLoading" })
                <div class="col-md-offset-2">
                    Version : @ViewContext.Controller.GetType().Assembly.GetName().Version
                </div>
            </footer>
            <div id="divLoading" class="loading" style="display:none"></div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/bootstrap-theme-js")
        @Scripts.Render("~/bundles/batdog")
        @Scripts.Render("~/bundles/datetimepicker")
        @Scripts.Render("~/bundles/dropzone")

        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
