@model IEnumerable<WebUI.DTOs.BusinessLocationDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Business Locations for '@ViewBag.BusinessName'</h2>

<p>
    @Html.ActionLink("Create New", "BusinessLocationCreate", new { businessid = ViewBag.BusinessId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
       <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressLine1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressLine2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressSuburb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddressPostcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Enabled)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressLine1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressLine2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressSuburb)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AddressPostcode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Enabled)
        </td>
        <td>
            @Html.ActionLink("Internal Locations", "InternalLocationIndex", "Business", new { businesslocationid = item.Id }, null) |
            @Html.ActionLink("Employees", "Index", "Employee", new { businesslocationid = item.Id }, null) |
            @Html.ActionLink("Recurring Shifts", "RecurringShiftIndex", "Business", new { businesslocationid = item.Id }, null) |
            @Html.ActionLink("Shift Blocks", "Index", "ShiftBlock", new { businesslocationid = item.Id }, null) |


            @Html.ActionLink("Edit", "BusinessLocationEdit", new { businesslocationid = item.Id }) |
            @Html.ActionLink("Details", "BusinessLocationDetails", new { businesslocationid = item.Id }) 
        </td>
    </tr>
}

</table>
